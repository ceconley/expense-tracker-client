<!--Table-->
<div class="container table-responsive">
  <table id="index-expense-table" class="table table-hover table-striped table-bordered">
  <!--Table head-->
    <thead>
      <tr id="header-row">
        <th scope="col">Date</th>
        <th scope="col">Id</th>
        <th scope="col">Source</th>
        <th scope="col">Category</th>
        <th scope="col">Description</th>
        <th scope="col">Amount</th>
      </tr>
    </thead>
    <br/>
    <tbody>
      {{#each expenses as |expense|}}
      <tr>
        <td>{{this.created_at_display}}</td>
        <td>{{this.id}}</td>
        <td>{{this.source}}</td>
        <td>{{this.category}}</td>
        <td>{{this.description}}</td>
        <td>${{this.amount}}</td>
      {{/each}}
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>Total:</td>
        <td id="amount-sum"></td>
      </tr>
    </tbody>
  </table>
</div>
