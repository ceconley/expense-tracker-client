<!--Table-->
<div class="container table-responsive">
  <table id="index-expense-table" class="table table-hover table-striped table-bordered">
  <!--Table head-->
    <thead>
      <tr id="header-row">
        <th><div class="date-width">Date</div></th>
        <th><div class="id-width">Id</div></th>
        <th><div class="source-width">Source</div></th>
        <th><div class="category-width">Category</div></th>
        <th><div class="desc-width">Description</div></th>
        <th><div class="amount-width">Amount</div></th>
      </tr>
    </thead>
    <br/>
    <tbody>
      {{#each expenses as |expense|}}
      <tr>
        <td><div class="date-width">{{this.created_at_display}}</div></td>
        <td><div class="id-width">{{this.id}}</div></td>
        <td><div class="source-width">{{this.source}}</div></td>
        <td><div class="category-width">{{this.category}}</div></td>
        <td><div class="desc-width">{{this.description}}</div></td>
        <td><div class="amount-width">${{this.amount}}</div></td>
      {{/each}}
      </tr>
      <tr>
        <td class="date-width"></td>
        <td class="id-width"></td>
        <td class="source-width"></td>
        <td class="category-width"></td>
        <td class="desc-width">Total:</td>
        <td class="amount-width" id="amount-sum"></td>
      </tr>
    </tbody>
  </table>
</div>
