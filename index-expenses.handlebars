<!--Table-->
<div class="container" "table-responsive" style="margin-top: 50px;">
  <table id="dest" class="table table-hover table-striped table-bordered">
  <!--Table head-->
    <thead>
      <tr>
        <th scope="col" onclick="sortTable(0)">Id</th>
        <th scope="col" onclick="sortTable(1)">Source</th>
        <th scope="col" onclick="sortTable(2)">Amount</th>
        <th scope="col" onclick="sortTable(3)">Category</th>
        <th scope="col" onclick="sortTable(4)">Description</th>
      </tr>
    </thead>
    <tbody>
      {{#each expenses as |expense|}}
        {{log expense}}
      <tr>
        <td>{{expense.id}}</td>
        <td>{{expense.source}}</td>
        <td>${{expense.amount}}</td>
        <td>{{expense.category}}</td>
        <td>{{expense.description}}</td>
      {{/each}}
      </tr>
    </tbody>
  </table>
</div>
